{
  "name": "webentwicklerat/emogrifier",
  "description": "Converts CSS styles into inline HTML styles.",
  "keywords": [
    "typo3",
    "emogrifier",
    "emogrify",
    "css",
    "inline",
    "style"
  ],
  "homepage": "https://github.com/WebentwicklerAt/typo3-emogrifier",
  "type": "typo3-cms-extension",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Gernot Leitgab",
      "homepage": "https://webentwickler.at"
    }
  ],
  "require": {
    "typo3/minimal": ">=8.7.0 <=9.5.99",
    "pelago/emogrifier": "~3.1.0"
  },
  "replace": {
    "typo3-ter/emogrifier": "self.version"
  },
  "autoload": {
    "psr-4": {
      "WebentwicklerAt\\Emogrifier\\": "Classes/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "update-libs": [
      "mkdir -p Resources/Private/Php",
      "@composer global require clue/phar-composer",
      "$HOME/.composer/vendor/bin/phar-composer build pelago/emogrifier:~3.1.0 Resources/Private/Php/Emogrifier.phar"
    ],
    "pack": [
      "git archive -o ../emogrifier.zip HEAD",
      "zip -ru ../emogrifier.zip Resources/Private/Php/Emogrifier.phar"
    ],
    "post-autoload-dump": [
      "mkdir -p .Build/public/typo3conf/ext/",
      "[ -L .Build/public/typo3conf/ext/emogrifier ] || ln -snvf ../../../../. .Build/public/typo3conf/ext/emogrifier"
    ]
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "emogrifier",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/public"
    }
  }
}
